<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="JSLint" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
  <UsingTask AssemblyFile="$(MSBuildProjectDirectory)\..\bin\Debug\JSLintNet.dll" TaskName="JSLintTask" />
  <Target Name="JSLint">
    <JSLintTask SourceDirectory="$(MSBuildProjectDirectory)\Scripts\" SettingsFile="$(MSBuildProjectDirectory)\Warnings.json" OutputOverride="Error" ContinueOnError="ErrorAndContinue">
      <Output TaskParameter="ErrorCount" ItemName="JSLintErrorCount" />
      <Output TaskParameter="ErrorFileCount" ItemName="JSLintErrorFileCount" />
      <Output TaskParameter="ProcessedFileCount" ItemName="JSLintProcessedFileCount" />
    </JSLintTask>
    <Message Text="JSLINTERRORCOUNT=@(JSLintErrorCount)=JSLINTERRORCOUNT"></Message>
    <Message Text="JSLINTERRORFILECOUNT=@(JSLintErrorFileCount)=JSLINTERRORFILECOUNT"></Message>
    <Message Text="JSLINTPROCESSEDFILECOUNT=@(JSLintProcessedFileCount)=JSLINTPROCESSEDFILECOUNT"></Message>
  </Target>
</Project>
